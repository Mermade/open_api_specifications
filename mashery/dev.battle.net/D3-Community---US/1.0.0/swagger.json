    "/d3/profile/{battleTag}/": {
      "get": {
        "operationId": "CareerProfileProfileAPI",
        "summary": "Returns the career profile of a Battle Tag",
        "tags": [
          "Profile API"
        ],
        "parameters": [
          {
            "name": "battleTag",
            "type": "string",
            "description": "Battle Tag in name-#### format (ie. Noob-1234)",
            "in": "path",
            "required": true
          },
          {
            "name": "locale",
            "type": "string",
            "description": "What locale to use in the response",
            "in": "query",
            "required": false,
            "enum": [
              "en_US",
              "pt_BR",
              "es_MX"
            ]
          },
          {
            "name": "callback",
            "type": "string",
            "description": "Request data to be returned as a JsonP callback",
            "in": "query",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    },
